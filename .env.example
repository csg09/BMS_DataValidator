# =============================================================================
# BMS Validator - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env to version control

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=bms_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=bms_validator
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (constructed from above or set directly)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Celery Configuration
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/0

# =============================================================================
# Application Settings
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-in-production

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=BMS Validator

# =============================================================================
# File Storage
# =============================================================================
# Base directory for file storage
STORAGE_DIR=./storage

# Upload directory (relative to STORAGE_DIR)
UPLOAD_DIR=./storage/uploads

# Reports directory (relative to STORAGE_DIR)
REPORTS_DIR=./storage/reports

# Maximum upload file size in bytes (200MB default)
MAX_UPLOAD_SIZE=209715200

# Threshold for switching from Pandas to Dask (in MB)
LARGE_FILE_THRESHOLD_MB=50

# =============================================================================
# CORS Settings
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Frontend Configuration (for Docker builds)
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# =============================================================================
# Optional: Email Configuration (for notifications)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# Optional: Sentry Error Tracking
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# Docker-specific overrides (uncomment for Docker Compose)
# =============================================================================
# POSTGRES_HOST=db
# REDIS_HOST=redis
